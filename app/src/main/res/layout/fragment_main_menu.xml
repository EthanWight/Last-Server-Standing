<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Animated Background - Matrix-style Binary Rain -->
    <edu.commonwealthu.lastserverstanding.view.BinaryRainView
        android:id="@+id/background_animation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.4"
        android:contentDescription="@string/background_desc" />

    <!-- App Title -->
    <TextView
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textAppearance="@style/TextAppearance.App.Headline1"
        android:letterSpacing="0.05"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/spacing_xxl" />

    <!-- Tagline -->
    <TextView
        android:id="@+id/text_tagline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tagline"
        android:textAppearance="@style/TextAppearance.App.Body1"
        android:textColor="@color/text_secondary"
        app:layout_constraintTop_toBottomOf="@id/text_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/spacing_xs" />

    <!-- Button Container -->
    <LinearLayout
        android:id="@+id/button_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="@dimen/spacing_lg"
        app:layout_constraintTop_toBottomOf="@id/text_tagline"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/spacing_xxl">

        <!-- Continue Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_continue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/continue_game"
            android:textColor="@color/button_text_dark"
            android:textSize="@dimen/text_size_lg"
            android:padding="@dimen/spacing_sm"
            app:cornerRadius="@dimen/corner_radius_md"
            android:visibility="gone" />

        <!-- New Game Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_new_game"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_sm"
            android:padding="@dimen/spacing_sm"
            android:text="@string/new_game"
            android:textColor="@color/button_text_dark"
            android:textSize="@dimen/text_size_lg"
            app:cornerRadius="@dimen/corner_radius_md"
            tools:ignore="VisualLintButtonSize" />

        <!-- Leaderboard Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_leaderboard"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/leaderboard"
            android:textSize="@dimen/text_size_md"
            android:padding="@dimen/spacing_xs"
            android:layout_marginTop="@dimen/spacing_xxs"
            tools:ignore="VisualLintButtonSize" />

    </LinearLayout>

    <!-- Settings Button (Top-Right) -->
    <ImageButton
        android:id="@+id/btn_settings"
        android:layout_width="@dimen/button_size_md"
        android:layout_height="@dimen/button_size_md"
        android:src="@drawable/ic_settings"
        android:contentDescription="@string/settings"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:tint="@color/electric_blue"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="@dimen/spacing_md" />

</androidx.constraintlayout.widget.ConstraintLayout>
