<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_md">

        <!-- Header -->
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings"
            android:textSize="@dimen/text_size_title"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/spacing_md" />

        <!-- Back Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_back"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/back"
            android:textColor="@color/electric_blue"
            app:layout_constraintTop_toTopOf="@id/title"
            app:layout_constraintBottom_toBottomOf="@id/title"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Player Profile Section -->
        <TextView
            android:id="@+id/profile_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profile"
            android:textSize="@dimen/text_size_lg"
            android:textStyle="bold"
            android:textColor="@color/electric_blue"
            android:layout_marginTop="@dimen/spacing_xl"
            app:layout_constraintTop_toBottomOf="@id/title"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Player Name Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/player_name_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_md"
            android:layout_marginStart="@dimen/spacing_md"
            android:layout_marginEnd="@dimen/spacing_md"
            android:maxLength="32"
            android:hint="@string/player_name"
            app:boxBackgroundMode="filled"
            app:boxBackgroundColor="@color/surface_elevated"
            app:hintTextColor="@color/text_secondary"
            app:layout_constraintTop_toBottomOf="@id/profile_header"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_max="@dimen/text_input_max_width">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_player_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_primary"
                android:maxLength="32"
                android:inputType="textPersonName"
                android:singleLine="true" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Audio Section -->
        <TextView
            android:id="@+id/audio_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/audio"
            android:textSize="@dimen/text_size_lg"
            android:textStyle="bold"
            android:textColor="@color/electric_blue"
            android:layout_marginTop="@dimen/spacing_lg"
            app:layout_constraintTop_toBottomOf="@id/player_name_layout"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Sound Switch -->
        <LinearLayout
            android:id="@+id/sound_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/spacing_md"
            android:background="@drawable/bg_hud_element"
            android:layout_marginTop="@dimen/spacing_md"
            app:layout_constraintTop_toBottomOf="@id/audio_header"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sound_effects"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/text_size_md" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sound_effects_description"
                    android:textColor="@color/text_secondary"
                    android:textSize="@dimen/text_size_sm"
                    android:layout_marginTop="@dimen/spacing_xxs" />
            </LinearLayout>

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switch_sound"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:contentDescription="@string/toggle_sound_effects"
                app:thumbTint="@color/switch_thumb"
                app:trackTint="@color/switch_track" />
        </LinearLayout>

        <!-- Haptics Section -->
        <TextView
            android:id="@+id/haptics_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/haptics"
            android:textSize="@dimen/text_size_lg"
            android:textStyle="bold"
            android:textColor="@color/electric_blue"
            android:layout_marginTop="@dimen/spacing_lg"
            app:layout_constraintTop_toBottomOf="@id/sound_container"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Vibration Switch -->
        <LinearLayout
            android:id="@+id/vibration_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/spacing_md"
            android:background="@drawable/bg_hud_element"
            android:layout_marginTop="@dimen/spacing_md"
            app:layout_constraintTop_toBottomOf="@id/haptics_header"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/vibration"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/text_size_md" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/vibration_description"
                    android:textColor="@color/text_secondary"
                    android:textSize="@dimen/text_size_sm"
                    android:layout_marginTop="@dimen/spacing_xxs" />
            </LinearLayout>

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switch_vibration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:contentDescription="@string/toggle_vibration"
                app:thumbTint="@color/switch_thumb"
                app:trackTint="@color/switch_track" />
        </LinearLayout>

        <!-- Display Section -->
        <TextView
            android:id="@+id/display_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/display"
            android:textSize="@dimen/text_size_lg"
            android:textStyle="bold"
            android:textColor="@color/electric_blue"
            android:layout_marginTop="@dimen/spacing_lg"
            app:layout_constraintTop_toBottomOf="@id/vibration_container"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Tower Ranges Switch -->
        <LinearLayout
            android:id="@+id/tower_ranges_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/spacing_md"
            android:background="@drawable/bg_hud_element"
            android:layout_marginTop="@dimen/spacing_md"
            app:layout_constraintTop_toBottomOf="@id/display_header"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tower_ranges"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/text_size_md" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tower_ranges_description"
                    android:textColor="@color/text_secondary"
                    android:textSize="@dimen/text_size_sm"
                    android:layout_marginTop="@dimen/spacing_xxs" />
            </LinearLayout>

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switch_tower_ranges"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:contentDescription="@string/toggle_tower_ranges"
                app:thumbTint="@color/switch_thumb"
                app:trackTint="@color/switch_track" />
        </LinearLayout>

        <!-- Info Section -->
        <TextView
            android:id="@+id/info_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/game_info"
            android:textSize="@dimen/text_size_lg"
            android:textStyle="bold"
            android:textColor="@color/electric_blue"
            android:layout_marginTop="@dimen/spacing_lg"
            app:layout_constraintTop_toBottomOf="@id/tower_ranges_container"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Game Info Button -->
        <LinearLayout
            android:id="@+id/info_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/spacing_md"
            android:background="@drawable/bg_hud_element"
            android:layout_marginTop="@dimen/spacing_md"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintTop_toBottomOf="@id/info_header"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/view_info"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/text_size_md" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/game_info_description"
                    android:textColor="@color/text_secondary"
                    android:textSize="@dimen/text_size_sm"
                    android:layout_marginTop="@dimen/spacing_xxs" />
            </LinearLayout>

            <ImageView
                android:layout_width="@dimen/icon_size_md"
                android:layout_height="@dimen/icon_size_md"
                android:layout_gravity="center_vertical"
                android:src="@android:drawable/ic_menu_info_details"
                android:contentDescription="@string/game_info"
                app:tint="@color/electric_blue" />
        </LinearLayout>

        <!-- Save Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_save"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button_height_lg"
            android:layout_marginTop="@dimen/spacing_xl"
            android:backgroundTint="@color/electric_blue"
            android:text="@string/save_settings"
            android:textColor="@color/button_text_dark"
            android:textSize="@dimen/text_size_md"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/info_container" />

        <!-- Main Menu Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_main_menu"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button_height_lg"
            android:text="@string/main_menu"
            android:textSize="@dimen/text_size_md"
            android:textColor="@color/danger_red"
            app:strokeColor="@color/danger_red"
            android:layout_marginTop="@dimen/spacing_md"
            android:layout_marginBottom="@dimen/spacing_md"
            app:layout_constraintTop_toBottomOf="@id/btn_save"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
