<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    android:padding="@dimen/spacing_md">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/game_info"
            android:textSize="@dimen/text_size_xxl"
            android:textStyle="bold"
            android:textColor="@color/electric_blue"
            android:layout_marginBottom="@dimen/spacing_md" />

        <!-- Towers Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/towers"
            android:textSize="@dimen/text_size_xl"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginTop="@dimen/spacing_xs"
            android:layout_marginBottom="@dimen/spacing_xs" />

        <!-- Firewall Tower -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_sm"
            app:cardBackgroundColor="@color/surface_elevated"
            app:cardCornerRadius="@dimen/corner_radius_md"
            app:cardElevation="@dimen/elevation_sm">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/firewall_tower_info"
                android:textColor="@color/text_primary"
                android:textSize="@dimen/text_size_body"
                android:padding="@dimen/spacing_md"
                android:lineSpacingMultiplier="1.2"
                tools:ignore="VisualLintLongText" />
        </androidx.cardview.widget.CardView>

        <!-- Honeypot Tower -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_sm"
            app:cardBackgroundColor="@color/surface_elevated"
            app:cardCornerRadius="@dimen/corner_radius_md"
            app:cardElevation="@dimen/elevation_sm">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/honeypot_tower_info"
                android:textColor="@color/text_primary"
                android:textSize="@dimen/text_size_body"
                android:padding="@dimen/spacing_md"
                android:lineSpacingMultiplier="1.2"
                tools:ignore="VisualLintLongText" />
        </androidx.cardview.widget.CardView>

        <!-- Jammer Tower -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_md"
            app:cardBackgroundColor="@color/surface_elevated"
            app:cardCornerRadius="@dimen/corner_radius_md"
            app:cardElevation="@dimen/elevation_sm">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/jammer_tower_info"
                android:textColor="@color/text_primary"
                android:textSize="@dimen/text_size_body"
                android:padding="@dimen/spacing_md"
                android:lineSpacingMultiplier="1.2"
                tools:ignore="VisualLintLongText" />
        </androidx.cardview.widget.CardView>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:background="@color/text_secondary"
            android:layout_marginTop="@dimen/spacing_xs"
            android:layout_marginBottom="@dimen/spacing_md"
            android:alpha="0.3" />

        <!-- Tower Upgrades Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tower_upgrades"
            android:textSize="@dimen/text_size_xl"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="@dimen/spacing_xs" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_md"
            app:cardBackgroundColor="@color/surface_elevated"
            app:cardCornerRadius="@dimen/corner_radius_md"
            app:cardElevation="@dimen/elevation_sm">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tower_upgrades_info"
                android:textColor="@color/text_primary"
                android:textSize="@dimen/text_size_body"
                android:padding="@dimen/spacing_md"
                android:lineSpacingMultiplier="1.2"
                tools:ignore="VisualLintLongText" />
        </androidx.cardview.widget.CardView>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:background="@color/text_secondary"
            android:layout_marginTop="@dimen/spacing_xs"
            android:layout_marginBottom="@dimen/spacing_md"
            android:alpha="0.3" />

        <!-- Enemies Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/enemies"
            android:textSize="@dimen/text_size_xl"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="@dimen/spacing_xs" />

        <!-- Data Crawler -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_sm"
            app:cardBackgroundColor="@color/surface_elevated"
            app:cardCornerRadius="@dimen/corner_radius_md"
            app:cardElevation="@dimen/elevation_sm">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/data_crawler_info"
                android:textColor="@color/text_primary"
                android:textSize="@dimen/text_size_body"
                android:padding="@dimen/spacing_md"
                android:lineSpacingMultiplier="1.2"
                tools:ignore="VisualLintLongText" />
        </androidx.cardview.widget.CardView>

        <!-- Virus Bot -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_sm"
            app:cardBackgroundColor="@color/surface_elevated"
            app:cardCornerRadius="@dimen/corner_radius_md"
            app:cardElevation="@dimen/elevation_sm">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingMultiplier="1.2"
                android:padding="@dimen/spacing_md"
                android:text="@string/virus_bot_info"
                android:textColor="@color/text_primary"
                android:textSize="@dimen/text_size_body"
                tools:ignore="VisualLintLongText,TextContrastCheck,TextContrastCheck,TextContrastCheck" />
        </androidx.cardview.widget.CardView>

        <!-- Trojan Horse -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_sm"
            app:cardBackgroundColor="@color/surface_elevated"
            app:cardCornerRadius="@dimen/corner_radius_md"
            app:cardElevation="@dimen/elevation_sm">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/trojan_horse_info"
                android:textColor="@color/text_primary"
                android:textSize="@dimen/text_size_body"
                android:padding="@dimen/spacing_md"
                android:lineSpacingMultiplier="1.2"
                tools:ignore="VisualLintLongText" />
        </androidx.cardview.widget.CardView>

        <!-- Close Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="@dimen/button_min_width_lg"
            android:minHeight="@dimen/button_min_height"
            android:text="@string/close"
            android:textColor="@color/button_text_dark"
            android:backgroundTint="@color/electric_blue"
            android:paddingHorizontal="@dimen/spacing_xl"
            android:paddingVertical="@dimen/spacing_sm"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/spacing_md" />

    </LinearLayout>
</ScrollView>
