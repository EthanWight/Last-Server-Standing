<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/accent_outline"
    app:cardBackgroundColor="@color/surface_elevated">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Tower Icon -->
        <ImageView
            android:id="@+id/tower_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:contentDescription="@string/tower_icon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Tower Name -->
        <TextView
            android:id="@+id/tower_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Firewall"
            android:textAppearance="@style/TextAppearance.App.Headline2"
            android:textSize="16sp"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/tower_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" />

        <!-- Level Indicator -->
        <TextView
            android:id="@+id/tower_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Level 1"
            android:textSize="12sp"
            android:textColor="@color/warning_yellow"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/tower_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="4dp" />

        <!-- Cost -->
        <LinearLayout
            android:id="@+id/cost_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/tower_level"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_resource"
                android:contentDescription="@string/cost" />

            <TextView
                android:id="@+id/tower_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:textAppearance="@style/TextAppearance.App.Monospace"
                android:textColor="@color/warning_yellow"
                android:layout_marginStart="4dp" />

        </LinearLayout>

        <!-- Description -->
        <TextView
            android:id="@+id/tower_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Basic defense tower with high fire rate."
            android:textSize="12sp"
            android:textColor="@color/text_secondary"
            android:gravity="center"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/cost_container"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Stats Container -->
        <LinearLayout
            android:id="@+id/stats_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/tower_description"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp">

            <!-- Damage Chip -->
            <com.google.android.material.chip.Chip
                android:id="@+id/chip_damage"
                style="@style/Widget.App.Chip.Damage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15"
                app:chipIcon="@drawable/ic_damage"
                app:chipIconSize="14dp"
                android:layout_marginEnd="4dp" />

            <!-- Range Chip -->
            <com.google.android.material.chip.Chip
                android:id="@+id/chip_range"
                style="@style/Widget.App.Chip.Range"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="150"
                app:chipIcon="@drawable/ic_range"
                app:chipIconSize="14dp"
                android:layout_marginEnd="4dp" />

            <!-- Fire Rate Chip -->
            <com.google.android.material.chip.Chip
                android:id="@+id/chip_fire_rate"
                style="@style/Widget.App.Chip.FireRate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2.0"
                app:chipIcon="@drawable/ic_fire_rate"
                app:chipIconSize="14dp" />

        </LinearLayout>

        <!-- Upgrade Button (for dialog use) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_upgrade"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Upgrade"
            android:backgroundTint="@color/success_green"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/stats_container"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" />

        <!-- Close Button (for dialog use) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_close"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Close"
            android:textColor="@color/electric_blue"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/btn_upgrade"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" />

        <!-- Info Button -->
        <ImageButton
            android:id="@+id/btn_info"
            style="@style/Widget.App.Button.Icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_info"
            android:contentDescription="@string/tower_info"
            android:padding="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="?attr/selectableItemBackgroundBorderless" />

        <!-- Lock Overlay (conditionally visible) -->
        <FrameLayout
            android:id="@+id/lock_overlay"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#CC000000"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_lock"
                android:layout_gravity="center"
                android:contentDescription="@string/locked" />

        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
