<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/spacing_xs"
    app:cardCornerRadius="@dimen/corner_radius_lg"
    app:cardElevation="@dimen/elevation_sm"
    app:strokeWidth="@dimen/stroke_width_thin"
    app:strokeColor="@color/accent_outline"
    app:cardBackgroundColor="@color/surface_elevated">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_md">

        <!-- Tower Icon -->
        <ImageView
            android:id="@+id/tower_icon"
            android:layout_width="@dimen/icon_size_xl"
            android:layout_height="@dimen/icon_size_xl"
            android:contentDescription="@string/tower_icon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Tower Name -->
        <TextView
            android:id="@+id/tower_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/firewall"
            android:textAppearance="@style/TextAppearance.App.Headline2"
            android:textSize="@dimen/text_size_md"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/tower_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/spacing_xs" />

        <!-- Level Indicator -->
        <TextView
            android:id="@+id/tower_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/level_1"
            android:textSize="@dimen/text_size_sm"
            android:textColor="@color/warning_yellow"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/tower_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/spacing_xxs" />

        <!-- Cost -->
        <TextView
            android:id="@+id/tower_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cost_100"
            android:textAppearance="@style/TextAppearance.App.Monospace"
            android:textColor="@color/warning_yellow"
            app:drawableStartCompat="@drawable/ic_resource"
            android:drawablePadding="@dimen/spacing_xxs"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/tower_level"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/spacing_xs" />

        <!-- Description -->
        <TextView
            android:id="@+id/tower_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/firewall_description"
            android:textSize="@dimen/text_size_sm"
            android:textColor="@color/text_secondary"
            android:gravity="center"
            android:layout_marginTop="@dimen/spacing_xs"
            app:layout_constraintTop_toBottomOf="@id/tower_cost"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Stats Container -->
        <LinearLayout
            android:id="@+id/stats_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/tower_description"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/spacing_sm">

            <!-- Damage Chip -->
            <com.google.android.material.chip.Chip
                android:id="@+id/chip_damage"
                style="@style/Widget.App.Chip.Damage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/damage_15"
                app:chipIcon="@drawable/ic_damage"
                app:chipIconSize="@dimen/icon_size_sm"
                android:layout_marginEnd="@dimen/spacing_xxs" />

            <!-- Range Chip -->
            <com.google.android.material.chip.Chip
                android:id="@+id/chip_range"
                style="@style/Widget.App.Chip.Range"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/range_150"
                app:chipIcon="@drawable/ic_range"
                app:chipIconSize="@dimen/icon_size_sm"
                android:layout_marginEnd="@dimen/spacing_xxs" />

            <!-- Fire Rate Chip -->
            <com.google.android.material.chip.Chip
                android:id="@+id/chip_fire_rate"
                style="@style/Widget.App.Chip.FireRate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fire_rate_2_0"
                app:chipIcon="@drawable/ic_fire_rate"
                app:chipIconSize="@dimen/icon_size_sm" />

        </LinearLayout>

        <!-- Upgrade Button (for dialog use) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_upgrade"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/upgrade"
            android:backgroundTint="@color/success_green"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/stats_container"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/spacing_md"
            android:layout_marginStart="@dimen/spacing_md"
            android:layout_marginEnd="@dimen/spacing_md" />

        <!-- Close Button (for dialog use) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_close"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="@dimen/button_min_width"
            android:minHeight="@dimen/button_min_height"
            android:text="@string/close"
            android:textColor="@color/electric_blue"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/btn_upgrade"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/spacing_xs" />

        <!-- Delete Button -->
        <ImageButton
            android:id="@+id/btn_delete"
            style="@style/Widget.App.Button.Icon"
            android:layout_width="@dimen/button_size_md"
            android:layout_height="@dimen/button_size_md"
            android:src="@drawable/ic_delete"
            android:contentDescription="@string/delete_tower"
            android:padding="@dimen/spacing_sm"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:visibility="gone" />

        <!-- Info Button -->
        <ImageButton
            android:id="@+id/btn_info"
            style="@style/Widget.App.Button.Icon"
            android:layout_width="@dimen/button_size_md"
            android:layout_height="@dimen/button_size_md"
            android:src="@drawable/ic_info"
            android:contentDescription="@string/tower_info"
            android:padding="@dimen/spacing_sm"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="?attr/selectableItemBackgroundBorderless" />

        <!-- Lock Overlay (conditionally visible) -->
        <FrameLayout
            android:id="@+id/lock_overlay"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/overlay_dark"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:layout_width="@dimen/icon_size_lg"
                android:layout_height="@dimen/icon_size_lg"
                android:src="@drawable/ic_lock"
                android:layout_gravity="center"
                android:contentDescription="@string/locked" />

        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
