<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/spacing_xs"
    app:cardElevation="@dimen/elevation_sm"
    app:cardCornerRadius="@dimen/corner_radius_md"
    app:cardBackgroundColor="@color/card_background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/button_min_height"
        android:padding="@dimen/spacing_md">

        <!-- Rank -->
        <TextView
            android:id="@+id/text_rank"
            android:layout_width="@dimen/icon_size_xl"
            android:layout_height="@dimen/icon_size_xl"
            android:text="@string/_1"
            android:gravity="center"
            android:textSize="@dimen/text_size_xl"
            android:textStyle="bold"
            android:textColor="@color/electric_blue"
            android:background="@drawable/bg_hud_element"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- Player Name -->
        <TextView
            android:id="@+id/text_player_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/player_name_placeholder"
            android:textSize="@dimen/text_size_lg"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginStart="@dimen/spacing_md"
            android:ellipsize="end"
            android:maxLines="1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/text_rank"
            app:layout_constraintEnd_toStartOf="@id/wave_container" />

        <!-- Timestamp -->
        <TextView
            android:id="@+id/text_timestamp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/timestamp_placeholder"
            android:textSize="@dimen/text_size_sm"
            android:textColor="@color/text_secondary"
            android:layout_marginStart="@dimen/spacing_md"
            android:layout_marginTop="@dimen/spacing_xxs"
            app:layout_constraintTop_toBottomOf="@id/text_player_name"
            app:layout_constraintStart_toEndOf="@id/text_rank"
            app:layout_constraintEnd_toStartOf="@id/wave_container" />

        <!-- Wave Badge -->
        <LinearLayout
            android:id="@+id/wave_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/bg_hud_element"
            android:padding="@dimen/spacing_sm"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/wave"
                android:textSize="@dimen/text_size_xs"
                android:textColor="@color/text_secondary" />

            <TextView
                android:id="@+id/text_wave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_10"
                android:textSize="@dimen/text_size_xxl"
                android:textStyle="bold"
                android:textColor="@color/success_green"
                android:layout_marginTop="@dimen/spacing_tiny"
                android:fontFamily="monospace" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
