<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/surface_elevated"
    android:padding="16dp">

    <!-- Drag Handle -->
    <View
        android:id="@+id/drag_handle"
        android:layout_width="32dp"
        android:layout_height="4dp"
        android:background="@color/accent_outline"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp" />

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/select_tower"
        android:textAppearance="@style/TextAppearance.App.Headline2"
        android:textSize="20sp"
        android:layout_marginBottom="16dp" />

    <!-- Tower RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/tower_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="200dp"
        android:clipToPadding="false" />

</LinearLayout>
