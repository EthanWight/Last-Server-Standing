<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base Dark Theme with Cyberpunk Aesthetic -->
    <style name="Base.Theme.LastServerStanding" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Primary Colors -->
        <item name="colorPrimary">@color/electric_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/blue_dark</item>
        <item name="colorOnPrimaryContainer">@color/blue_light</item>

        <!-- Secondary Colors -->
        <item name="colorSecondary">@color/danger_red</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSecondaryContainer">@color/red_dark</item>
        <item name="colorOnSecondaryContainer">@color/red_light</item>

        <!-- Background Colors -->
        <item name="android:colorBackground">@color/background_deep</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorOnSurface">@color/white</item>

        <!-- Accent Colors -->
        <item name="colorError">@color/danger_red</item>
        <item name="colorOnError">@color/white</item>

        <!-- Typography -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.App.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.App.Headline2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.App.Body1</item>
        <item name="textAppearanceButton">@style/TextAppearance.App.Button</item>

        <!-- Component Styles -->
        <item name="materialCardViewStyle">@style/Widget.App.CardView</item>
        <item name="materialButtonStyle">@style/Widget.App.Button</item>
        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.App.BottomSheetDialog</item>
        <item name="chipStyle">@style/Widget.App.Chip</item>
        <item name="floatingActionButtonStyle">@style/Widget.App.FloatingActionButton</item>

        <!-- System UI -->
        <item name="android:statusBarColor">@color/background_deep</item>
        <item name="android:navigationBarColor">@color/background_deep</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="Theme.LastServerStanding" parent="Base.Theme.LastServerStanding" />

    <!-- Typography Styles -->
    <style name="TextAppearance.App.Headline1" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="fontFamily">monospace</item>
        <item name="android:textSize">48sp</item>
        <item name="android:textColor">@color/electric_blue</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <style name="TextAppearance.App.Headline2" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="fontFamily">monospace</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.App.Body1" parent="TextAppearance.Material3.BodyLarge">
        <item name="fontFamily">sans-serif</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.App.Button" parent="TextAppearance.Material3.LabelLarge">
        <item name="fontFamily">monospace</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">0.1</item>
    </style>

    <style name="TextAppearance.App.Monospace" parent="TextAppearance.Material3.BodyMedium">
        <item name="fontFamily">monospace</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <!-- Component Styles -->

    <!-- Material Card -->
    <style name="Widget.App.CardView" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/accent_outline</item>
        <item name="cardBackgroundColor">@color/surface_elevated</item>
        <item name="contentPadding">16dp</item>
    </style>

    <!-- Buttons -->
    <style name="Widget.App.Button" parent="Widget.Material3.Button">
        <item name="cornerRadius">8dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="backgroundTint">@color/electric_blue</item>
        <item name="rippleColor">@color/ripple_white</item>
    </style>

    <style name="Widget.App.Button.Text" parent="Widget.Material3.Button.TextButton">
        <item name="cornerRadius">8dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="rippleColor">@color/ripple_blue</item>
    </style>

    <style name="Widget.App.Button.Icon" parent="Widget.Material3.Button.IconButton">
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="rippleColor">@color/ripple_blue</item>
    </style>

    <!-- Floating Action Button -->
    <style name="Widget.App.FloatingActionButton" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="backgroundTint">@color/electric_blue</item>
        <item name="tint">@color/white</item>
        <item name="elevation">8dp</item>
        <item name="pressedTranslationZ">12dp</item>
    </style>

    <!-- Bottom Sheet -->
    <style name="ThemeOverlay.App.BottomSheetDialog" parent="ThemeOverlay.Material3.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Widget.App.BottomSheet</item>
    </style>

    <style name="Widget.App.BottomSheet" parent="Widget.Material3.BottomSheet.Modal">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.App.BottomSheet</item>
        <item name="backgroundTint">@color/surface_elevated</item>
    </style>

    <style name="ShapeAppearance.App.BottomSheet" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeTopRight">16dp</item>
    </style>

    <!-- Chips -->
    <style name="Widget.App.Chip" parent="Widget.Material3.Chip.Assist">
        <item name="android:minHeight">32dp</item>
        <item name="chipCornerRadius">16dp</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipIconSize">18dp</item>
    </style>

    <style name="Widget.App.Chip.Damage">
        <item name="chipBackgroundColor">@color/chip_damage_bg</item>
        <item name="chipStrokeColor">@color/danger_red</item>
        <item name="chipIconTint">@color/danger_red</item>
    </style>

    <style name="Widget.App.Chip.Range">
        <item name="chipBackgroundColor">@color/chip_range_bg</item>
        <item name="chipStrokeColor">@color/electric_blue</item>
        <item name="chipIconTint">@color/electric_blue</item>
    </style>

    <style name="Widget.App.Chip.FireRate">
        <item name="chipBackgroundColor">@color/chip_firerate_bg</item>
        <item name="chipStrokeColor">@color/warning_yellow</item>
        <item name="chipIconTint">@color/warning_yellow</item>
    </style>

    <!-- Progress Indicators -->
    <style name="Widget.App.LinearProgressIndicator" parent="Widget.Material3.LinearProgressIndicator">
        <item name="trackThickness">8dp</item>
        <item name="trackCornerRadius">4dp</item>
        <item name="indicatorColor">@color/progress_indicator</item>
        <item name="trackColor">@color/progress_track</item>
    </style>

    <style name="Widget.App.CircularProgressIndicator" parent="Widget.Material3.CircularProgressIndicator">
        <item name="indicatorSize">48dp</item>
        <item name="trackThickness">4dp</item>
        <item name="indicatorColor">@color/electric_blue</item>
    </style>

    <!-- Switch -->
    <style name="Widget.App.Switch" parent="Widget.Material3.CompoundButton.Switch">
        <item name="thumbTint">@color/switch_thumb</item>
        <item name="trackTint">@color/switch_track</item>
    </style>

    <!-- HUD Overlay Style -->
    <style name="TextAppearance.HUD" parent="TextAppearance.Material3.BodyMedium">
        <item name="fontFamily">monospace</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <!-- Emergency Alert Banner -->
    <style name="Widget.App.Banner" parent="">
        <item name="android:background">@color/danger_red</item>
        <item name="android:elevation">8dp</item>
        <item name="android:padding">16dp</item>
    </style>

</resources>